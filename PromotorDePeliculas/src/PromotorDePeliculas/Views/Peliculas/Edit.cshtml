@model PromotorDePeliculas.Models.Pelicula

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Pelicula</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Descripcion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DirectorId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
                <span asp-validation-for="DirectorId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FechaEstreno" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FechaEstreno" class="form-control" />
                <span asp-validation-for="FechaEstreno" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LugarEstreno" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LugarEstreno" class="form-control" />
                <span asp-validation-for="LugarEstreno" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nacionalidad" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nacionalidad" class="form-control" />
                <span asp-validation-for="Nacionalidad" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductorId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ProductorId" class="form-control" asp-items="ViewBag.ProductorId"></select>
                <span asp-validation-for="ProductorId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Titulo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="glyphicon glyphicon-arrow-left" /> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
