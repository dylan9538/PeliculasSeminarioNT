@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CertamenPeliculasP", "Consultas", FormMethod.Get))
{

    <div class="jumbotron">
        <h1>Consulta galardonados en certamen</h1>
    </div>

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <p style="font-size:200%;">Seleccione el certamen para ver peliculas premiadas en el</p>
                @Html.DropDownList("CertamenId")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Consultar" class="btn btn-default" />
            </div>
        </div>
    </div>
}