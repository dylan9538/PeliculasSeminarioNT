@model IEnumerable<PromotorDePeliculas.Models.ModelsVista.ActorPapelPelicula>
@{
    ViewBag.Title = "Reparto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Reparto de la pelicula seleccionada</h1>
<table class="table">
    <tr>
        <th>
            Actor
        </th>
        <th>
            Papel
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Actor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Papel)
            </td>
        </tr>
    }
</table>

<div>
    <a asp-action="ActoresPapelesPelicula" class="glyphicon glyphicon-arrow-left" />
</div>


