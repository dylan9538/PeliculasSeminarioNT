@model PromotorDePeliculas.Models.Actor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>


        <dd>
            <h4>Papeles</h4>
            <table class="table">
                <tr>
                    <th>Descripcion</th>
                    <th>Pelicula</th>
                    <th>TipoPapel</th>
                </tr>
                @foreach (var item in Model.Papeles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PeliculaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoPapel)
                        </td>
                    </tr>
                }
            </table>
        </dd>



    </dl>
</div>
<div>
    <a asp-action="Index" class="glyphicon glyphicon-arrow-left" /> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
   
</div>
