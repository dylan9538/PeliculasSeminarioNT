@model PromotorDePeliculas.Models.Comentario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Comentario</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PeliculaId" />
    <input type="hidden" asp-for="UsuarioId" />
        <div class="form-group">
            <label asp-for="Descripcion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FechaComentario" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FechaComentario" class="form-control" />
                <span asp-validation-for="FechaComentario" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lugar" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Lugar" class="form-control" />
                <span asp-validation-for="Lugar" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <label asp-for="PeliculaId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.PeliculaId"></select>
                <span asp-validation-for="PeliculaId" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UsuarioId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="glyphicon glyphicon-arrow-left" /> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
